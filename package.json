{
  "name": "starter-project",
  "version": "1.0.0",
  "description": "project description here.",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o css src/scss",
    "postcss": "postcss -r css/*",
    "serve": "browser-sync start --server --files '/css/*.css, /js/*.js, /**/*.html'",
    "build:css": "npm run scss && npm run postcss",
    "watch:css": "onchange \"src/scss/**/*.scss\" -- npm run build:css",
    "watch": "run-p serve watch:css"
  },
  "author": "Ruhollah Hosseini",
  "repository": {
    "type": "git",
    "url": "https://github.com/4quila/starter-project"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "browser-sync": "^2.26.13",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss": "^8.1.2",
    "postcss-cli": "^8.1.0"
  },
  "dependencies": {}
}
